<?xml version="1.0"?>
<Container version="2">
  <Name>bazarr</Name>
  <Repository>hotio/bazarr</Repository>
  <Registry>https://hub.docker.com/r/hotio/bazarr</Registry>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://discord.gg/3SnkuKp</Support>
  <Project>https://github.com/hotio/docker-bazarr</Project>
  <Category>Downloaders: MediaApp:Other</Category>
  <TemplateURL>https://raw.githubusercontent.com/selfhosters/unRAID-CA-templates/master/templates/hotio-bazarr.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/selfhosters/unRAID-CA-templates/master/templates/img/hotio-bazarr.png</Icon>
  <Overview>Bazarr is a companion application to Sonarr and Radarr. It manages and downloads subtitles based on your requirements.</Overview>
  <Description>Bazarr is a companion application to Sonarr and Radarr. It manages and downloads subtitles based on your requirements.</Description>
  <MyIP/>
  <DonateText/>
  <DonateLink/>
  <DonateImg/>
  <WebUI>http://[IP]:[PORT:6767]</WebUI>
  <ExtraParams/>
  <PostArgs/>
  <Network>bridge</Network>
  <Config Name="Host Port for 6767" Target="6767" Default="6767" Mode="tcp" Description="Container Port: 6767" Type="Port" Display="always" Required="true" Mask="false"/>
  <Config Name="Host Path for /config" Target="/config" Default="" Mode="rw" Description="Container Path: /config" Type="Path" Display="always" Required="true" Mask="false"/>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="Container Variable: PUID" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Container Variable: PGID" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="UMASK" Target="UMASK" Default="002" Mode="" Description="Container Variable: UMASK" Type="Variable" Display="always" Required="false" Mask="false"/>
</Container>
